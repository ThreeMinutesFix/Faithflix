<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prime_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/faith_bg"
    tools:context=".Ui.PrimeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/prime_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <me.ibrahimsn.lib.NiceBottomBar
        android:id="@+id/primeBottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/faith_bg"
        app:badgeColor="@color/btn_color_1"
        app:indicatorColor="@color/white"
        app:indicatorEnabled="false"
        app:indicatorGravity="top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu"
        app:textColor="@color/white"
        app:textColorActive="@color/btn_color_1" />
</androidx.constraintlayout.widget.ConstraintLayout>